<?xml version="1.0" encoding="utf-8"?>
<layout name="DEMO_KeyboardMapping" id="DEMO_KeyboardMapping" version="1.0" author="GrÃ©gory Lardon" dpi="220">
	


	<!-- layer landscape -->	
	<landscape>
	
		<bgColor>#222222</bgColor>
		<bgCornerRadius>0</bgCornerRadius>			
		<bgAlpha>1</bgAlpha>			

	 
		<!-- controls -->		
		<controls>

			<stick id="stickMain" type="4directions">
				<bgRadius>150</bgRadius>
				<stickRadius>50</stickRadius>
				<bgColor>0XFF0000</bgColor>
				<stickColor>0XFF0000</stickColor>
				<bgAlpha>.6</bgAlpha>
				<stickAlpha>.6</stickAlpha>
				<align bottom="0" left="0" />
				<label id="stickLabel" alpha=".5">
					<text>L</text>
					<style size="35" color="#FFFFFF" align="center" font="Arial" bold="true" />
					<align hcenter="0" vcenter="0" />
				</label> 
			</stick>		
			
			<roundButton id="buttonA">
			    <bgRadius>60</bgRadius>
			    <buttonRadius>40</buttonRadius>
			    <bgColor>0XFF0000</bgColor>
			    <buttonColor>0XFF0000</buttonColor>
			    <bgAlpha>.6</bgAlpha>
			    <buttonAlpha>.6</buttonAlpha>
			    <align bottom="0" right="0" />
			    <label id="butALabel" alpha=".5">
			        <text>A</text>
			        <style size="35" color="#FFFFFF" align="center" font="Arial" bold="true" />
			        <align hcenter="0" vcenter="0" />
			    </label> 
			    <action type="vibrate" trigger="touchDown" />
			</roundButton>  
		
						 
		</controls>		
		
	</landscape>
	
	
	
	 
</layout>